@page "/reverse-a-string"
<PageTitle>Reverse A String</PageTitle>
<h3>Reverse A String</h3>

<div class="vstack col col-md-6 gap-3">
    <InputText @bind-Value="@inputString" class="form-control" placeholder="Enter a string to reverse" />
<div class="text-end">
    <button class="btn btn-primary" @onclick="ReverseMe">
        Reverse Me
    </button>
</div>
<hr />
<div>
    @displayResult
</div>
</div>

@code {
    private string inputString = "Reverse Me";
    private string reversedString = string.Empty;
    private string displayResult = string.Empty;

    private void ReverseMe()
    {
        reversedString = string.Empty;

        for (int i = inputString.Length - 1; i >= 0 ; i--)
        {
            reversedString += inputString[i];
        }
        displayResult = $"The reverse of {inputString} is {reversedString}";
    }
}
